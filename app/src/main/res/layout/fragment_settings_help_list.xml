<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_lg"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/open_sans"
        android:includeFontPadding="false"
        tools:text="@string/settings_ic_feed"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title">

        <ListView
            android:id="@+id/base_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ScrollbarStyle"
            android:divider="@null"
            tools:listitem="@layout/item_settings_entry"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/no_result"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="60dp"
        android:layout_below="@id/title"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_26"
        android:fontFamily="@font/open_sans"
        android:textSize="14sp"
        android:text="@string/no_result_wish_base_list"/>

</RelativeLayout>