<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/activity_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_password_change_title"
        android:textColor="@color/black_87"
        android:textSize="20sp"
        android:layout_marginBottom="@dimen/activity_margin_lg"
        android:fontFamily="@font/open_sans_semibold"/>

    <include
        android:id="@+id/settings_pwd_current"
        layout="@layout/custom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_pwd_current"/>

    <include
        android:id="@+id/settings_pwd_new"
        layout="@layout/custom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/prompt_pwd_new"/>

    <include
        android:id="@+id/settings_pwd_new_confirm"
        layout="@layout/custom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/prompt_pwd_new_confirm"/>

    <tech.icrossing.lsm.widgets.OSBButton
        android:id="@+id/save_pwd"
        style="@style/LoginButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:onClick="onClick"
        android:text="@string/action_save"
        app:osBBtn="@string/osBold"/>


</LinearLayout>