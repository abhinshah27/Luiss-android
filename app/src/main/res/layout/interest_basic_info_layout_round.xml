<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_rounded_2_bottom"
    android:paddingBottom="@dimen/activity_margin_lg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_lg">

        <ImageView
            android:id="@+id/preferred_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            app:srcCompat="@drawable/ic_preferred_interest_small"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/preferred_icon_invis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_preferred_interest_small"/>

        <androidx.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/interest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/preferred_icon_invis"
            android:layout_toStartOf="@id/preferred_icon"
            android:paddingTop="25dp"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="bottom|center_horizontal"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/black_87"
            android:textSize="20sp"
            tools:text="Juventus F.C."/>

        <androidx.emoji.widget.EmojiAppCompatEditText
            android:id="@+id/interest_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/preferred_icon_invis"
            android:layout_toStartOf="@id/preferred_icon"
            android:paddingTop="25dp"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="bottom|center_horizontal"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/black_87"
            android:textSize="20sp"
            android:textColorHint="@color/black_38"
            android:inputType="textCapWords"
            android:textCursorDrawable="@drawable/custom_cursor_drawable"
            android:scrollHorizontally="true"
            android:hint="@string/interest_detail_hint_name"
            android:background="@null"
            android:visibility="gone"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/headline_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="visible">

        <androidx.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/interest_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingStart="@dimen/activity_margin_lg"
            android:paddingEnd="@dimen/activity_margin_lg"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:maxLines="2"
            android:textColor="@color/black_87"
            android:textSize="14sp"
            tools:text="Association football club from Italy"
            android:visibility="visible"/>

        <androidx.emoji.widget.EmojiAppCompatEditText
            android:id="@+id/interest_headline_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="@color/black_87"
            android:textColorHint="@color/black_38"
            android:inputType="textCapSentences"
            android:textCursorDrawable="@drawable/custom_cursor_drawable"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:hint="@string/interest_detail_hint_headline"
            android:fontFamily="@font/open_sans"
            android:background="@null"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout android:id="@+id/hearts_followers_section"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/activity_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/talk_to_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/black_70"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:text="Parla con Noi"
            android:background="@drawable/shape_rectangle_rounded_border_30_1dp"/>

        <TextView
            android:id="@+id/job_openings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/black_70"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:text="Job Openings"
