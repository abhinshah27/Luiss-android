<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="20dp"
        android:text="@string/dialog_circle_title_add"
        android:textColor="@color/black_87"
        android:textSize="20sp"
        android:fontFamily="@font/open_sans_bold"/>

    <androidx.emoji.widget.EmojiAppCompatEditText
        android:id="@+id/rename_circle_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@drawable/custom_cursor_drawable"
        android:hint="@string/dialog_create_list_hint"
        android:textColor="@color/black_87"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans"/>

    <include layout="@layout/generic_dialog_section_buttons"/>

</LinearLayout>