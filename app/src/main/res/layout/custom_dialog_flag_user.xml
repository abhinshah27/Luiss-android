<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/dialog_flag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="20dp"
        tools:text="@string/dialog_block_unblock_title_b"
        android:textColor="@color/black_87"
        android:textSize="22sp"
        android:fontFamily="@font/open_sans_bold"/>

    <TextView
        android:id="@+id/dialog_flag_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAlignment="textStart"
        tools:text="@string/dialog_block_unblock_message_b"
        android:textColor="@color/black_54"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans"/>

    <androidx.emoji.widget.EmojiAppCompatEditText
        android:id="@+id/report_post_edittext"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        style="@style/CommentEditTextStyleGen"
        android:hint="@string/dialog_flag_report_hint"
        android:gravity="top"
        android:textColor="@color/black_87"
        android:fontFamily="@font/open_sans"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:background="@drawable/background_et_report_post"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/error_empty_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/hl_red"
        android:fontFamily="@font/open_sans"
        android:textSize="16sp"
        android:text="@string/error_report_empty_message"
        android:paddingTop="5dp"
        android:alpha="0"/>

    <include layout="@layout/generic_dialog_section_buttons"/>

</LinearLayout>